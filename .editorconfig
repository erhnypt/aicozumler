# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 100

# TypeScript and JavaScript
[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# HTML files
[*.html]
indent_size = 2

# CSS and SCSS files
[*.{css,scss,sass}]
indent_size = 2

# Python files (if any)
[*.py]
indent_size = 4
max_line_length = 88

# Shell scripts
[*.sh]
indent_size = 2

# Docker files
[Dockerfile*]
indent_size = 2

# Configuration files
[*.{toml,ini}]
indent_size = 2

# Package files
[package.json]
indent_size = 2

# Lock files (don't edit)
[{package-lock.json,yarn.lock,pnpm-lock.yaml}]
insert_final_newline = false
trim_trailing_whitespace = false

# Generated files
[*.min.{js,css}]
insert_final_newline = false
trim_trailing_whitespace = false
