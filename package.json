{
  "name": "vite-react-typescript-starter",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "test:all": "npm run test:run && npm run test:e2e",
    "analyze": "ANALYZE=true npm run build",
    "analyze:serve": "npm run analyze && npx serve dist -s",
    "build:dev": "NODE_ENV=development vite build --mode development",
    "build:staging": "NODE_ENV=staging vite build --mode staging",
    "build:production": "NODE_ENV=production vite build --mode production",
    "docker:build": "docker build -t aicozumler:latest .",
    "docker:build:dev": "docker build -f Dockerfile.dev -t aicozumler:dev .",
    "docker:run": "docker run -p 3000:3000 aicozumler:latest",
    "docker:run:dev": "docker run -p 3000:3000 -v $(pwd):/app aicozumler:dev",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:dev": "docker-compose --profile dev up -d",
    "health-check": "curl -f http://localhost:3000/health || exit 1",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,scss,md,html}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"],
    "rules": {
      "type-enum": [
        2,
        "always",
        [
          "feat",
          "fix",
          "docs",
          "style",
          "refactor",
          "perf",
          "test",
          "build",
          "ci",
          "chore",
          "revert"
        ]
      ],
      "subject-case": [2, "never", ["start-case", "pascal-case", "upper-case"]],
      "subject-max-length": [2, "always", 72],
      "body-max-line-length": [2, "always", 100]
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.3",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "crypto-js": "^4.2.0",
    "i18next": "^23.8.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^14.0.5",
    "react-router-dom": "^6.21.3",
    "unplugin-auto-import": "^20.2.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.13.0",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/crypto-js": "^4.2.2",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.3.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "postcss": "^8.4.35",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.10.0",
    "vite": "^6.0.1",
    "vitest": "^3.2.4"
  }
}
